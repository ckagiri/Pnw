@model Pnw.Admin.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container-fluid">

    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
    </hgroup>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="row-fluid">
            <div class="span2">@Html.LabelFor(m => m.UserName)</div>
            <div class="span8">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">@Html.LabelFor(m => m.Password)</div>
            <div class="span8">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2 checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </div>
            <div class="span8"></div>
        </div>
        <div class="row-fluid">
            <div class="span2"></div>
            <div class="span8">
                <input class="btn btn-large" type="submit" value="Log in" />
            </div>
        </div>
    }

    <section id="loginForm">
        @*        <h2>Use a local account to log in.</h2>*@
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <p>
                <b>@Html.ActionLink("Register", "Register")</b> if you don't have an account.
            </p>
        }
    </section>
</div>

